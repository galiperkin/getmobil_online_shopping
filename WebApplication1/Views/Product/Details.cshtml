@model WebApplication1.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>@Html.DisplayFor(model => model.Name)</h1>
<h6>@Html.DisplayFor(model => model.Description)</h6>
<div>
    <hr />
    <dl class="row">
        <dd class = "col-sm-12">
            <img width="256" height="256" src="@Html.DisplayFor(model => model.Image)" alt="@Html.DisplayFor(model => model.Name)">
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GrossPriceCurrency)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Vat)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Vat)%
        </dd>
        
        @if (Model.InStock)
        {
            <form asp-controller="Cart" asp-action="AddToCart" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="productId" value="@Model.Id" />
                <button type="submit" class="btn btn-primary">Add to Cart</button>
            </form>
        }
        else
        {
            <span class="text-danger">Not in stock</span>
        }
    </dl>
</div>
<div>
    <a asp-controller="Home" asp-action="Index">Home</a>
</div>
